<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CSEhelp</title>
    <script type="importmap"></script>
    <link rel="shortcut icon" href="~/asset/logo.png" type="image/x-icon">
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/toastr.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/adminlte.css" asp-append-version="true" />

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
          integrity="sha256-9kPW/n5nn53j4WMRYAxe9c1rCY96Oogo/MKSVdKzPmI="
          crossorigin="anonymous" />
</head>
<body class="layout-fixed sidebar-expand-lg bg-body-tertiary" style="background-color: #97969b;">
   @if(User.Identity.IsAuthenticated)
   {
        <div class="app-wrapper">
            <nav class="app-header navbar navbar-expand bg-body">
                <div class="container-fluid">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" data-lte-toggle="sidebar" href="#" role="button">
                                <i class="bi bi-list"></i>
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" data-widget="navbar-search" href="#" role="button">
                                @User.Identity.Name
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" data-lte-toggle="fullscreen">
                                Log Out
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            <aside class="app-sidebar bg-body-secondary shadow" data-bs-theme="dark">
                <div class="sidebar-brand">
                    <a href="#" class="brand-link">
                        <img src="~/asset/logo.png" alt="CSE Help Logo" class="brand-image opacity-75 shadow" />
                        <span class="brand-text fw-light">CSE Help</span>
                    </a>
                </div>
                <div class="sidebar-wrapper">
                    <nav class="mt-2">
                        <ul class="nav sidebar-menu flex-column" data-lte-toggle="treeview" role="menu" data-accordion="false">
                            <li class="nav-item menu-open">
                                <a href="#" class="nav-link active">
                                    <i class="nav-icon bi bi-speedometer"></i>
                                    <p>Dashboard<i class="nav-arrow bi bi-chevron-right"></i></p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="#" class="nav-link active">
                                            <i class="nav-icon bi bi-circle"></i>
                                            <p>Dashboard v1</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            @* <li class="nav-header">DOCUMENTATIONS</li> *@
                            @* <li class="nav-item"> *@
                            @*     <a href="#" class="nav-link"> *@
                            @*         <i class="nav-icon bi bi-download"></i> *@
                            @*         <p>Installation</p> *@
                            @*     </a> *@
                            @* </li> *@
                        </ul>
                    </nav>
                </div>
            </aside>

            @RenderBody()

            <footer class="app-footer">
                <div class="float-end d-none d-sm-inline">Welcome Sanzid</div>
                <strong>
                    Copyright &copy; 2024&nbsp;
                    <a href="#" class="text-decoration-none">Sanzid</a>.
                </strong>
                All rights reserved.
            </footer>
        </div>

   }
   else{
    @RenderBody()
   }

    <script src="~/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/jquery.min.js" asp-append-version="true"></script>
    <script src="~/js/toastr.min.js" asp-append-version="true"></script>
    <script src="~/js/adminlte.js"></script>
